{{#if development}}
  {{#each scripts}}
    <script src="{{src}}"></script>
  {{/each}}
  <script>
    requirejs.config({
      baseUrl: '{{require.baseUrl}}',
      paths: {{{require.paths}}},
      shim: {{{require.shim}}},
      config: {
        app: {{#json appConfig}}{{/json}}
      }
    });
    require(['app']);
  </script>
{{/if}}